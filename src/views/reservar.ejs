<%- include includes/header %>

<div class="container py-5">
    <div class="row g-5">
        <div class="col-12 col-md-5">

            <div id='calendar'></div>
        </div>
        <div class="col-12 col-md-7">

            <div class="d-flex flex-column gap-3 lista-reservas">
                <!-- Comando de loop inicio (a colocar) -->
                <% lugares.forEach(lugar => { %>
                <div class="row gx-5 reservar-local mx-md-1">
                    <div class="col-12 col-md-4 d-flex align-items-center"><img width="180" height="180" src="<%=lugar.thumbnail_url%>" class="imagem-local" title="<%=lugar.nome%>" alt="<%=lugar.nome%>" style="object-fit: cover;object-position: center;"></div>
                    <div class="col-12 col-md-8">
                        <p class="h1"><%=lugar.nome%></p>
                        <p><%=lugar.description%></p>
                        <p class="mb-0">Horários disponíveis</p>
                        <form method="post" action="#" id="id_espaco_<%=lugar.id%>">

                            <!-- Inicia loop horarios (A Fazer) -->
                            <% for(var h=0; h < 4; h++) { %>
                                <% if(!h) { %>
                                    <input type="radio" class="btn-check" name="options" id="option_<%=lugar.id%>_<%=h%>" autocomplete="off" checked>
                                <% } else { %>
                                    <input type="radio" class="btn-check" name="options" id="option_<%=lugar.id%>_<%=h%>" autocomplete="off" >
                                <% }%>
                                <label class="btn btn-outline-primary" for="option_<%=lugar.id%>_<%=h%>"><%=(12 + (h * 3))%>:00</label>
                            <% }%>
                            
                            <!-- Encerra loop horarios (A Fazer) -->

                            
                        </form>
                    </div>
                </div>
                <% }); %>
                <!-- Comando de loop fim (a colocar) -->
            </div>
            <p class="text-start mt-4 mx-1"><a href="#" class="btn btn-primary">Confirmar Reservas</a></p>

        </div>
    </div>
</div>

<%- include includes/footer %>